@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item" style="height: 50%; width: 50%; float: left;">
                        <center>
                            <a class="nav-link" href="/Identity/Account/Login"><strong>Login</strong></a>
                        </center>
                    </li>
                    <li class="nav-item" style="height: 50%; width: 50%; float: left;">
                        <center>
                            <a class="nav-link" href="/Identity/Account/Register"><strong>Register</strong></a>
                        </center>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @RenderSection("Scripts", required: false)
<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>
}